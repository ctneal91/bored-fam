<h1>Edit Password</h1>

<%= form_with model: Current.user, url: edit_password_path do |f| %>
	<p>
		<%= f.label "Password" %><br>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label "Password Confirmation" %><br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit "Update" %>
	</p>
<% end %>