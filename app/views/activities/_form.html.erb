<%= form_with model: @activity do |form| %>
  <div>
    <%= form.label :category %><br>
    <%= form.select :category, ['charity', 'cooking', 'music', 'diy', 'education', 'social', 'busywork', 'recreational', 'relaxation'], {include_blank: true} %>
  </div>

  <div>
    <%= form.label :participants %><br>
    <%= form.number_field :participants, in: 1..8 %>
    <% @activity.errors.full_messages_for(:participants).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, in: 0.0..1.0, step: 0.1 %>
    <% @activity.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :accessibility %><br>
    <%= form.number_field :accessibility, in: 0.0..1.0, step: 0.1 %>
    <% @activity.errors.full_messages_for(:accessibility).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>